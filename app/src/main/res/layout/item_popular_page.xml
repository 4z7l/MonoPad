<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/colorBlack">
        <ImageView
            android:id="@+id/item_movie_iv_blur_poster"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/colorLightGrey"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_movie_iv_poster"
                android:layout_width="180dp"
                android:layout_height="280dp"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true"
                android:background="@color/colorGrey"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/item_movie_iv_poster"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_16">

                <TextView
                    android:id="@+id/item_movie_tv_title"
                    style="@style/SmallTitleTextViewStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="5"
                    android:shadowRadius="5.0"
                    android:shadowDx="5.0"
                    android:shadowDy="5.0"
                    android:shadowColor="#000000"
                    tools:text="영화 제목영화 제목영화제목영화제목영화 제목영화 영화 제목영화 제목 제목영화 제목영화 제목" />

                <TextView
                    android:id="@+id/item_movie_tv_1"
                    style="@style/SubTitleTextViewStyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowRadius="5.0"
                    android:shadowDx="5.0"
                    android:shadowDy="5.0"
                    android:shadowColor="#000000"
                    android:layout_marginVertical="@dimen/spacing_16"
                    tools:text="2020" />

                <TextView
                    android:id="@+id/item_movie_tv_2"
                    style="@style/SubTitleTextViewStyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/item_movie_tv_3"
                    style="@style/SubTitleTextViewStyle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"

                    tools:text="Title" />

                <Button
                    android:id="@+id/item_movie_bt_trailer"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/button_trailer_shape"
                    android:text="트레일러" />

            </LinearLayout>

        </RelativeLayout>



    </FrameLayout>
</layout>