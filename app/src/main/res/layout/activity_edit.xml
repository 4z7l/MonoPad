<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="com.project.monopad.ui.view.edit.EditActivity"/>
    </data>
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/colorGrey"
        tools:context=".ui.view.edit.EditActivity">
        <ImageView
            android:id="@+id/edit_iv_blur_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/edit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:elevation="0dp"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
        <RelativeLayout
            android:id="@+id/edit_review_container"
            android:layout_width="match_parent"
            android:layout_below="@id/edit_toolbar"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                card_view:cardBackgroundColor="#79DADADA"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="0dp"
                android:layout_margin="36dp"

                card_view:contentPadding="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/spacing_24"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/edit_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MiddleTitleTextViewStyle"
                        tools:text="title"/>
                    <TextView
                        android:id="@+id/edit_tv_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SubTitleTextViewStyle1"
                        tools:text="2020/01/01"
                        android:text="@string/edit_diary_date_message"
                        android:onClick="@{() -> activity.btnClick()}"/>
                    <RatingBar
                        android:id="@+id/edit_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="false"
                        android:progressTint="@color/colorYellow"
                        android:progressBackgroundTint="@color/colorYellow"
                        android:secondaryProgressTint="@color/colorYellow"
                        style="@style/Widget.AppCompat.RatingBar.Indicator"/>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_et_review"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:singleLine="false"
                        android:imeOptions="actionNone"
                        android:hint="리뷰를 기록하고 SNS에 공유해보세요!"
                        android:textColorHint="@color/colorLightGrey"
                        android:textCursorDrawable="@color/colorAccent"
                        android:textColor="@color/colorWhite"
                        android:focusable="true"
                        android:scrollbars="vertical"
                        android:background="@color/transparent"
                        android:layout_marginTop="@dimen/spacing_8"
                        style="@style/BodyTextViewStyle2"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>
</layout>