<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:datePickerStyle">@style/myDatePickerStyle</item>
        <item name="android:dialogTheme">@style/myDialogTheme</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MainToolbarStyle">
        <item name="background">@color/colorBlack</item>
    </style>

    <style name="BodyTextViewStyle1">
        <item name="android:textSize">@dimen/body_14</item>
    </style>

    <style name="BodyTextViewStyle2">
        <item name="android:textSize">@dimen/body_16</item>
    </style>

    <style name="BigTitleTextViewStyle">
        <item name="android:textSize">@dimen/title_34</item>
    </style>

    <style name="MiddleTitleTextViewStyle">
        <item name="android:textSize">@dimen/title_24</item>
    </style>

    <style name="SmallTitleTextViewStyle">
        <item name="android:textSize">@dimen/title_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SubTitleTextViewStyle1">
        <item name="android:textSize">@dimen/subtitle_16</item>
    </style>

    <style name="SubTitleTextViewStyle2">
        <item name="android:textSize">@dimen/subtitle_14</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CaptionTextViewStyle">
        <item name="android:textSize">@dimen/caption_12</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:textSize">@dimen/button_text</item>
    </style>

    <style name="DefaultImageViewStyle">
        <item name="background">@color/colorGrey</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <!--아래처럼 커스텀 가능-->
    <style name="LoginButtonStyle" parent="DefaultButtonStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="HomeImageViewStyle1" parent="DefaultImageViewStyle">
        <item name="android:height">250dp</item>
        <item name="android:width">180dp</item>
    </style>

    <style name="HomeTitleTextViewStyle" parent="SmallTitleTextViewStyle">
        <item name="android:layout_marginTop">@dimen/spacing_24</item>
        <item name="android:layout_marginBottom">@dimen/spacing_16</item>
    </style>


    <!--detail-->
    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--imageSelect-->
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorWhite</item>
    </style>

    <style name="VideoDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowBackground">#80000000</item>
    </style>

  <!--calendar-->
    <style name="myDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>
    <style name="myDialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:datePickerStyle">@style/myDatePickerStyle</item>
    </style>

    <!--bottom fragment-->
    <style name="CornerRadius6" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
    </style>

    <!--Edit Review-->
    <!--https://stackoverflow.com/questions/30239627/how-to-change-the-style-of-a-datepicker-in-android-->
    <style name="CustomDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="colorAccent">@color/colorAccent</item>                   <!--header background-->
        <item name="android:windowBackground">@color/colorBlack</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/colorAccent</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/colorWhite</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/colorGrey</item>    <!--days of the week-->
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorYellow</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

    <style name="ShadowTitleTextViewStyle">
        <item name="android:textSize">@dimen/title_20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">5.0</item>
        <item name="android:shadowDx">5.0</item>
        <item name="android:shadowDy">5.0</item>
        <item name="android:shadowColor">@color/colorBlack</item>
        <item name="android:paddingEnd">1dp</item>

    </style>

    <style name="ShadowBodyTextViewStyle" >
        <item name="android:textSize">@dimen/caption_12</item>
        <item name="android:shadowRadius">5.0</item>
        <item name="android:shadowDx">5.0</item>
        <item name="android:shadowDy">5.0</item>
        <item name="android:shadowColor">@color/colorBlack</item>
        <item name="android:paddingEnd">1dp</item>
    </style>

</resources>